<% include ../partials/header %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Yelpcamp</p>
			<div class="list-group">
				<li class="list-group-item active">Item 1</li>
				<li class="list-group-item">Item 2</li>
				<li class="list-group-item">Item 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= camp.image %>">
				<h4 class="pull-right">Models</h4>
				<p><%= camp.name %></p>
				<p><%= camp.description %></p>
				<p> 
					<%= camp.author.username %>
				</p>
				<% if (currentUser && camp.author.id.equals(currentUser._id)){ %>
					<p>
						<a class="btn btn-warning" href="/campgrounds/<%= camp._id %>/edit">Edit</a>
					</p>
					<p>
						<form action="/campgrounds/<%= camp.id %>?_method=DELETE" method="POST">
							<button class="btn btn-danger">DELETE</button>
						</form>
					</p>
				<% } %>
			</div>
			<div class="well">
				<div class="text-right">
					<p> <a class="btn btn-success" href="/campgrounds/<%= camp._id %>/comments/new">Add new comment</a></p>
				</div>
				<% camp.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<%= comment.author.username %>
						</div>
						<p><%= comment.text %></p>
					</div>
						<% if (currentUser && comment.author.id.equals(currentUser._id)){ %>
						<a class="btn btn-warning" href="/campgrounds/<%= camp._id %>/comments/<%= comment._id%>/edit">Edit Comment</a>
						<p>
							<form action="/campgrounds/<%= camp.id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
								<button class="btn btn-danger">DELETE</button>
							</form>
						</p>
						<% } %>
				<% }) %>
			</div>	
		</div>
	</div>
</div>


	




<% include ../partials/footer %>
